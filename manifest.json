{
    "manifest_version": 3,
    "name": "Anki Flashcard Creator Tos Edition",
    "version": "1.0.0",
    "description": "Create Anki flashcards directly from web articles",
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "contextMenus"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "assets/Tos.png",
        "48": "assets/Tos.png",
        "128": "assets/Tos.png"
      }
    },
    "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
    }],
    "background": {
      "service_worker": "background.js"
    },
    "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    },
    "icons": {
      "16": "assets/Tos.png",
      "48": "assets/Tos.png",
      "128": "assets/Tos.png"
    }
  }